generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id // Supabase Auth User ID (UUID)
  email     String   @unique
  name      String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  pages     Page[]
  tags      Tag[]

  @@map("users")
}

model Page {
  id        String     @id @default(cuid())
  title     String     @default("Untitled")
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  blocks    Block[]
  pageTags  PageTag[]
  isDeleted Boolean    @default(false)
  deletedAt DateTime?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("pages")
  @@index([userId])
  @@index([userId, updatedAt])
  @@index([title])
  @@index([userId, isDeleted])
}

model Block {
  id        String    @id @default(cuid())
  type      BlockType
  content   Json
  position  Int
  pageId    String
  page      Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("blocks")
  @@index([pageId])
  @@index([pageId, isDeleted])
}

model Tag {
  id        String    @id @default(cuid())
  name      String
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  pageTags  PageTag[]
  createdAt DateTime  @default(now())

  @@unique([name, userId])
  @@index([userId])
  @@map("tags")
}

model PageTag {
  pageId    String
  tagId     String
  page      Page      @relation(fields: [pageId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())

  @@id([pageId, tagId])
  @@index([pageId])
  @@index([tagId])
  @@map("page_tags")
}

enum BlockType {
  TEXT
  HEADING
  CHECKLIST
  IMAGE
  FILE
}
